# Digital Ocean App Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com
API_URL=https://your-domain.com/api
DEMO_URL=https://demo.your-domain.com

# Digital Ocean Configuration
DIGITALOCEAN_ACCESS_TOKEN=your_do_access_token_here
APP_NAME=simple-landing-page

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Contact Form Configuration
CONTACT_EMAIL=contact@your-domain.com
FROM_EMAIL=noreply@your-domain.com
CONTACT_SUBJECT_PREFIX="[Contact Form]"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://demo.your-domain.com
ALLOWED_METHODS=GET,POST,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# SSL/TLS Configuration
FORCE_HTTPS=true
TRUST_PROXY=true

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
HOTJAR_ID=your-hotjar-id

# Performance Configuration
CACHE_TTL=3600
GZIP_ENABLED=true
STATIC_MAX_AGE=86400

# Database (if needed for contact form storage)
DATABASE_URL=postgresql://username:password@host:port/dbname
DB_POOL_SIZE=5

# Redis (if needed for session storage)
REDIS_URL=redis://username:password@host:port

# Feature Flags
ENABLE_CONTACT_FORM=true
ENABLE_ANALYTICS=true
ENABLE_DEMO_MODE=false

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/app.log

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Build Configuration
BUILD_ENV=production
MINIFY_ASSETS=true
OPTIMIZE_IMAGES=true
GENERATE_SOURCEMAPS=false

# Third-party Integrations
MAILCHIMP_API_KEY=your-mailchimp-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-for-notifications
DISCORD_WEBHOOK_URL=your-discord-webhook-for-notifications

# Development Configuration (for local development)
DEV_PORT=3001
DEV_HOST=localhost
DEV_WATCH=true
DEV_HOT_RELOAD=true